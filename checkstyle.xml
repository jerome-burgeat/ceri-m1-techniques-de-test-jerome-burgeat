<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "configuration_1_3.dtd">

<module name="Checker">
    <property name="severity" value="warning" /> <!-- 指定检查结果的严重级别，可以是 error、warning、info -->
    <property name="charset" value="UTF-8" /> <!-- 指定源代码的字符集 -->
    <property name="tabWidth" value="4" /> <!-- 指定制表符的宽度 -->
    <property name="fileExtensions" value="java" /> <!-- 指定要检查的文件扩展名 -->

    <module name="TreeWalker">
        <!-- 指定要使用的规则 -->
        <module name="JavadocStyle">
            <property name="checkEmptyJavadoc" value="false" /> <!-- 是否检查空的 Javadoc 注释 -->
            <property name="checkFirstSentence" value="true" /> <!-- 是否检查 Javadoc 第一句 -->
            <property name="checkPeriod" value="true" /> <!-- 是否检查 Javadoc 结尾的句号 -->
            <property name="allowMissingParamTags" value="true" /> <!-- 是否允许缺少参数的 Javadoc 标签 -->
            <property name="allowMissingReturnTag" value="true" /> <!-- 是否允许缺少返回值的 Javadoc 标签 -->
            <property name="allowMissingThrowsTag" value="true" /> <!-- 是否允许缺少异常抛出的 Javadoc 标签 -->
        </module>
        <module name="Indentation">
            <property name="basicOffset" value="4" /> <!-- 指定基本缩进的宽度 -->
            <property name="braceAdjustment" value="0" /> <!-- 指定花括号的缩进调整 -->
            <property name="caseIndent" value="0" /> <!-- 指定 switch 语句中 case 标签的缩进调整 -->
            <property name="throwsIndent" value="4" /> <!-- 指定方法抛出异常的缩进 -->
        </module>
        <!-- 添加更多的规则模块 -->
    </module>
</module>